{
  "openapi": "3.0.0",
  "info": {
    "title": "SoundDate API",
    "version": "1.0.0"
  },
  "paths": {
    "/profile/sound": {
      "post": {
        "summary": "Uploads a sound file for a userâ€™s profile",
        "requestBody": {
          "required": true,
          "content": {
            "audio/mpeg": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            },
            "audio/x-wav": {
              "schema": {
                "type": "string",
                "format": "binary"
              }
            }
          },
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "length": {
                      "type": "number",
                      "format": "float"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    },
    "/user/{userId}/profile/sound": {
      "get": {
        "summary": "Retrieves a list of profile sound file URLs and their lengths for the specified user",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "sortOrder",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["mostRecent", "earliest", "shortest", "longest"],
              "default": "mostRecent"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "soundFiles": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "integer"
                          },
                          "url": {
                            "type": "string"
                          },
                          "length": {
                            "type": "number",
                            "format": "float"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}
